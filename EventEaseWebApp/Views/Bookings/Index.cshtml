@{
}

@{
    ViewData["Title"] = "Booking List";
    var bookings = ViewBag.BookingDetails as IEnumerable<dynamic>;
}

<h2>Booking List</h2>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchTerm" class="form-control" placeholder="Search by Booking ID or Event Name" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (bookings != null && bookings.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Event</th>
                <th>Venue</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in bookings)
            {
                <tr>
                    <td>@b.BookingId</td>
                    <td>@b.EventName</td>
                    <td>@b.VenueName</td>
                    <td>@b.BookingDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}
