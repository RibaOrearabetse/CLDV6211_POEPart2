@model EventEaseWebApp.Models.AddBookingViewModel

@{
    ViewData["Title"] = "Add Booking";
}

<h2>Add New Booking</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="EventId">Event</label>
        <select asp-for="EventId" class="form-control" asp-items="@(new SelectList(Model.Events, "EventId", "EventName"))">
            <option value="">-- Select Event --</option>
        </select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId">Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="@(new SelectList(Model.Venues, "VenueId", "VenueName"))">
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate">Booking Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit Booking</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
