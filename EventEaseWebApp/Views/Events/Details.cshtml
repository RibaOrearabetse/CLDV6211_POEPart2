@{
}
@model EventEaseWebApp.Models.Entities.Event

<h1>Event Details</h1>

<div>
    <h2>@Model.EventName</h2>
    <p><strong>Date:</strong> @Model.EventDate.ToString("MM/dd/yyyy")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Venue:</strong> @Model.Venue.VenueName</p>
    <p><strong>Location:</strong> @Model.Venue.Location</p>
    <p><strong>Capacity:</strong> @Model.Venue.Capacity</p>
    <p><strong>Image:</strong> <img src="@Model.Venue.ImageUrl" alt="Venue Image" width="300" /></p>
</div>

<a href="@Url.Action("List", "Events")" class="btn btn-secondary">Back to Events</a>
