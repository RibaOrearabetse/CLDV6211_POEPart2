@{
}

@model IEnumerable<EventEaseWebApp.Models.Entities.Event>

<h1>Events</h1>

<a href="@Url.Action("Create", "Events")" class="btn btn-primary">Create New Event</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Venue</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDate.ToString("MM/dd/yyyy")</td>
                <td>@eventItem.Venue.VenueName</td>
                <td>
                    <a href="@Url.Action("Details", "Events", new { id = eventItem.EventId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
